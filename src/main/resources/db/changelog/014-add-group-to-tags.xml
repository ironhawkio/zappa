<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="014-add-group-to-tags" author="system">
        <comment>Add group_id column to tags table for group-scoped tags</comment>

        <!-- Add group_id column (nullable for backward compatibility) -->
        <addColumn tableName="tags">
            <column name="group_id" type="UUID">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <!-- Add foreign key constraint to groups table -->
        <addForeignKeyConstraint
            baseTableName="tags"
            baseColumnNames="group_id"
            constraintName="fk_tags_group"
            referencedTableName="groups"
            referencedColumnNames="id"
            onDelete="SET NULL"/>

        <!-- Add index for better query performance -->
        <createIndex tableName="tags" indexName="idx_tags_group_user">
            <column name="group_id"/>
            <column name="user_id"/>
        </createIndex>

        <!-- Update the unique constraint to allow same tag names in different groups -->
        <dropUniqueConstraint tableName="tags" constraintName="tags_name_key"/>

        <addUniqueConstraint
            tableName="tags"
            columnNames="user_id, group_id, name"
            constraintName="uq_tags_user_group_name"/>

        <!-- Add index for global tags (where group_id is null) -->
        <createIndex tableName="tags" indexName="idx_tags_global">
            <column name="user_id"/>
        </createIndex>

        <rollback>
            <dropIndex tableName="tags" indexName="idx_tags_global"/>
            <dropUniqueConstraint tableName="tags" constraintName="uq_tags_user_group_name"/>
            <addUniqueConstraint tableName="tags" columnNames="name" constraintName="tags_name_key"/>
            <dropIndex tableName="tags" indexName="idx_tags_group_user"/>
            <dropForeignKeyConstraint baseTableName="tags" constraintName="fk_tags_group"/>
            <dropColumn tableName="tags" columnName="group_id"/>
        </rollback>
    </changeSet>

</databaseChangeLog>