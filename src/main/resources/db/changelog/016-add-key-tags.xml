<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="016-add-key-tags" author="claude">
        <comment>Add is_key column to tags table to support key tags feature</comment>

        <addColumn tableName="tags">
            <column name="is_key" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <createIndex tableName="tags" indexName="idx_tags_is_key">
            <column name="is_key"/>
        </createIndex>

        <createIndex tableName="tags" indexName="idx_tags_user_is_key">
            <column name="user_id"/>
            <column name="is_key"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>