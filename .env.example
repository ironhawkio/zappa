# Example environment configuration
# Copy this file to .env and customize for your environment

# Application Configuration
SPRING_PROFILES_ACTIVE=docker
APP_NAME=zappa

# Database Configuration
POSTGRES_DB=zappa
POSTGRES_USER=zappa_user
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=postgresql
DB_PORT=5432

# Application Database Connection
SPRING_DATASOURCE_URL=jdbc:postgresql://${DB_HOST}:${DB_PORT}/${POSTGRES_DB}
SPRING_DATASOURCE_USERNAME=${POSTGRES_USER}
SPRING_DATASOURCE_PASSWORD=${POSTGRES_PASSWORD}

# JPA Configuration
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_LIQUIBASE_ENABLED=true

# Server Configuration
SERVER_PORT=6886

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=INFO

# Optional: External Database (for production)
# DB_HOST=your-external-db-host.com
# DB_PORT=5432
# POSTGRES_DB=zappa_prod
# POSTGRES_USER=zappa_prod_user
# POSTGRES_PASSWORD=super_secure_production_password